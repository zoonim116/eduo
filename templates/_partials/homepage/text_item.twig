<div class="card">
    <div class="card-body">
        <h5 class="card-title"><a href="{{ path_for('text.view', {'id': text.text_id }) }}" >{{ text.title }}</a></h5>
        <p class="card-text">{{ text.short_description }}</p>
        <p class="card-text">
            <small class="text-muted">Last updated {{ text.updated_at | timeDiff }}</small>
            <a href="{{ path_for('user.profile', {'id': text.user.id }) }}">
                <img src="{{ text.user.avatar }}" class="post-item-avatar float-right">
            </a>
        </p>
    </div>
</div>