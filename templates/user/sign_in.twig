{% extends "layout.twig" %}
{% block content %}
    <div class="col-md-12">
    <h2 class="text-center text-white mb-4">Bootstrap 4 Login Form</h2>
    <div class="row">
        <div class="col-md-6 mx-auto">
            <!-- form card login -->
            <div class="card rounded-0">
                <div class="card-header">
                    <h3 class="mb-0">Sign In</h3>
                </div>
                <div class="card-body">
                    {% include '_partials/flash.twig' %}
                    <form class="form" role="form" action="{{ path_for('sign_in') }}" novalidate="" method="POST">
                        {{ csrf.field | raw }}
                        <div class="form-group">
                            <label for="uname1">Email</label>
                            <input type="text" class="form-control form-control-lg rounded-0{{ errors.email ? ' is-invalid' : '' }}" name="email" id="uname1" value="{{ fields.email }}" placeholder="email@gmail.com">
                            {% if errors.email %}
                                <div class="invalid-feedback">
                                    {{ errors.email | first }}
                                </div>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <label for="pwd1">Password</label>
                            <input type="password" class="form-control form-control-lg rounded-0{{ errors.password ? ' is-invalid' : '' }}" id="pwd1" name="password" value="{{ fields.password }}" placeholder="Password" autocomplete="password">
                            {% if errors.password %}
                                <div class="invalid-feedback">
                                    {{ errors.password | first }}
                                </div>
                            {% endif %}
                        </div>
                        <a href="{{ fb_url }}" class="btn btn-social btn-facebook">
                            <i class="fa fa-facebook fa-fw"></i> Sign in with Facebook
                        </a>
                        <button type="submit" class="btn btn-success float-right" id="btnLogin">Login</button>
                    </form>
                </div>
                <!--/card-block-->
            </div>
            <!-- /form card login -->

        </div>


    </div>
    <!--/row-->

    </div>
    <!--/col-->
{% endblock %}